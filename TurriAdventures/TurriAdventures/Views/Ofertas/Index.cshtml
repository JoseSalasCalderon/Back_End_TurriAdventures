@model IEnumerable<TurriAdventures.Entities.Oferta>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DescripcionOferta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicioOferta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFinalOferta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioOferta)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionOferta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicioOferta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFinalOferta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioOferta)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdOferta">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdOferta">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdOferta">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
