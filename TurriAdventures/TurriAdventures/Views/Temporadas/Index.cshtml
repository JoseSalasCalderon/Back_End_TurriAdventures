@model IEnumerable<TurriAdventures.Entities.Temporada>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DescripcionTemporada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicioTemporada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFinalTemporada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioTemporada)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionTemporada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicioTemporada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFinalTemporada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioTemporada)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdTemporada">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdTemporada">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdTemporada">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
